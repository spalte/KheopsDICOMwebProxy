<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <display-name>DICOMweb Proxy</display-name>
        <servlet-name>online.kheops.proxy.STOWResource</servlet-name>
    </servlet>

    <filter>
        <filter-name>ServletFilter</filter-name>
        <filter-class>online.kheops.proxy.FixTypeQuoteFilter</filter-class>
    </filter>

    <servlet-mapping>
        <servlet-name>online.kheops.proxy.STOWResource</servlet-name>
        <url-pattern>/dicomweb</url-pattern>
    </servlet-mapping>

    <filter-mapping>
        <filter-name>ServletFilter</filter-name>
        <url-pattern>/dicomweb/*</url-pattern>
    </filter-mapping>

    <context-param>
        <description>Base URI for the pacs</description>
        <param-name>online.kheops.pacs.uri</param-name>
        <param-value>https://test.kheops.online/dicomweb</param-value>
    </context-param>
    <context-param>
        <description>Base URI for the authentication server</description>
        <param-name>online.kheops.auth_server.uri</param-name>
        <param-value>https://test.kheops.online/authorization</param-value>
    </context-param>


</web-app>
