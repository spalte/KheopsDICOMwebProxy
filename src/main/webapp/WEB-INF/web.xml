<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <filter>
        <filter-name>ServletFilter</filter-name>
        <filter-class>online.kheops.proxy.filter.FixTypeQuoteFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>ServletFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <context-param>
        <description>Base URI for the pacs</description>
        <param-name>online.kheops.pacs.uri</param-name>
        <param-value>http://localhost:8080/dcm4chee-arc/aets/DCM4CHEE/rs</param-value>
    </context-param>
    <context-param>
        <description>Base URI for the authentication server</description>
        <param-name>online.kheops.auth_server.uri</param-name>
        <param-value>http://localhost:7575/authorization</param-value>
    </context-param>
    <context-param>
        <description>HMAC shared secret used to sign tokens used for post</description>
        <param-name>online.kheops.auth.hmacsecretpost</param-name>
        <param-value>P47dnfP28ptS/uzuuvEACmPYdMiOtFNLXiWTIwNNPgUjrvTgF/JCh3qZi47sIcpeZaUXw132mfmR4q5K/fwepA==</param-value>
    </context-param>


</web-app>
