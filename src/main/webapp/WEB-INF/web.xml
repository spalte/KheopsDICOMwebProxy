<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <display-name>DICOMweb Proxy</display-name>
        <servlet-name>online.kheops.proxy.STOWResource</servlet-name>
    </servlet>

    <servlet-mapping>
        <servlet-name>online.kheops.proxy.STOWResource</servlet-name>
        <url-pattern>/capabilities</url-pattern>
    </servlet-mapping>


    <context-param>
        <description>Base URI for the pacs</description>
        <param-name>online.kheops.pacs.uri</param-name>
        <param-value>http://localhost:8080/dcm4chee-arc/aets/DCM4CHEE/rs</param-value>
    </context-param>
    <context-param>
        <description>Base URI for the authentication server</description>
        <param-name>online.kheops.auth_server.uri</param-name>
        <param-value>http://localhost:7575</param-value>
    </context-param>


</web-app>
